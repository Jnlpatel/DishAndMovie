@model IEnumerable<DishAndMovie.Models.RecipeDto>
@{
    string originName = ViewBag.OriginName ?? "Unknown Origin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Recipes of @originName</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex-grow: 1;
            max-width: auto;
            margin: 0 auto;
            padding: 20px;
            overflow: auto;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .navigation {
            text-align: center;
            margin-bottom: 20px;
        }

            .navigation a {
                display: inline-block;
                padding: 10px 15px;
                background-color: #2980b9;
                color: white;
                text-decoration: none;
                border-radius: 5px;
                font-weight: bold;
                transition: background-color 0.3s ease;
            }

                .navigation a:hover {
                    background-color: #1c6391;
                }

        .recipe-table {
            width: 100%;
            margin: 20px auto;
            border-collapse: collapse;
        }

            .recipe-table th,
            .recipe-table td {
                padding: 12px 15px;
                border: 1px solid #ddd;
                text-align: left;
            }

            .recipe-table th {
                background-color: #34495e;
                color: white;
            }

            .recipe-table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .recipe-table tr:hover {
                background-color: #e9e9e9;
            }

        .button {
            padding: 8px 12px;
            color: white;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
            cursor: pointer;
            margin: 2px;
            display: inline-block;
            font-size: 14px;
        }

            .button.details {
                background-color: #2980b9;
            }

            .button.edit {
                background-color: #27ae60;
            }

            .button.delete {
                background-color: #e74c3c;
            }

            .button.back {
                background-color: #6c757d;
            }

            .button:hover {
                opacity: 0.9;
                transform: translateY(-1px);
            }

        .button-group {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Recipes of @originName</h1>

        <table class="recipe-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Origin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@originName</td>
                        <td>
                            <div class="button-group">
                                <a class="button details" href="/RecipePage/Details/@item.RecipeId">Details</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="navigation">
            <a class="button back" asp-action="Index">Back to Origins</a>
        </div>
    </div>
</body>
</html>